<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:aop="http://www.springframework.org/schema/aop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:hc="http://machine.maoyan.com/schema/httpclient"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
                        http://machine.maoyan.com/schema/httpclient http://machine.maoyan.com/schema/httpclient.xsd
                        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd">
                        
    <hc:http-api-scan package="api" socketTimeout="33" connectTimeout="33" maxTotalConnection="33" baseUrl="#{configProperties['baseUrl']}">
    	<hc:entity-converters>
    		<hc:entity-converter>com.maoyan.machine.httpclient.spring.converter.JacksonConverter</hc:entity-converter>
    	</hc:entity-converters>
    	<hc:interceptors>
    		<hc:interceptor order="1" beanName="interceptor"/>
    	</hc:interceptors>
    </hc:http-api-scan>
    
    <bean id="interceptor" class="interceptor.TestInterceptor"/>
    
    <bean id="configProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:config.properties</value>
            </list>
        </property>
    </bean>
</beans>
